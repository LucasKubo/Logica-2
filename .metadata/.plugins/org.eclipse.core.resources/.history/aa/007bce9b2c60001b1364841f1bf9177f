package pack1;

import java.text.DecimalFormat;
import java.time.LocalDateTime;
import java.time.Month;

public class CustosVariaveis {
	private int mercado;
	private int acougue;
	private int feira;
	private static final String UNIDADE_MONETARIA = ("R$");
	private static final String FORMATO = new DecimalFormat(UNIDADE_MONETARIA + " #,###,##0.00");
	private LocalDateTime validadeDoBoleto;
	
	public CustosVariaveis (int mercado, int acougue, int feira,int diaDeValidade, int mesValidade, int anoValidade) {
		this.mercado = mercado;
		this.acougue = acougue;
		this.feira = feira;
		validadeDoBoleto = LocalDateTime.of(anoValidade,mesValidade,diaDeValidade,12,00);
	}
	
	public String total() {
		return String.valueOf(feira+acougue+mercado);
	}
	
	public int consultarValor(CustosFixosMensais tipo) {
		return tipo.getValor();
	}

	public LocalDateTime getValidadeDoBoleto() {
		return validadeDoBoleto;
	}

	public void setValidadeDoBoleto(LocalDateTime validadeDoBoleto) {
		this.validadeDoBoleto = validadeDoBoleto;
	}
}
